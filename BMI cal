weight = float(input("Enter ur weight in kg's"))
height = float(input("Enter ur height in meters"))

BMI = weight/height**2

if BMI<16.0:
    print("You are sevely underweight")
elif BMI<18.5:
    print("You are underweight")
elif BMI<25.0:
    print("you are normal")
elif BMI<30.0:
    print("you are overweight")
elif BMI<35.0:
    print("you are moderately obese")
elif BMI<40.0:
    print("you are severely obese")
else:
    print("You are morbidly obese")
