def total_calc (bill_amount , tip_perc):

    tip_amount = (tip_perc/100)*bill_amount
    total_amount = bill_amount +tip_amount
    print("The bill amount is ",bill_amount)
    print("The tip percentage is",tip_perc)
    print("The tip amount is ",tip_amount)
    print("The total amount ",total_amount)

total_calc(100,15)
